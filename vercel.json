{
  "version": 2,
  "functions": {
    "server.js": {
      "includeFiles": "public/**"
    }
  },
  "routes": [
    { "src": "^/$", "dest": "/index.html" },
    { "src": "^/(api|auth|slack)(/.*)?$", "dest": "/server.js" },
    { "handle": "filesystem" },
    { "src": "/(.*)", "dest": "/index.html" }
  ]
}
